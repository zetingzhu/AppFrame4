<?xml version="1.0" encoding="utf-8"?>
<com.zzt.nested.layoutview.CalendarFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">

    <TextView
        android:id="@+id/mc"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#E6E6E6"
        android:gravity="center"
        android:orientation="vertical"
        android:text="和下面列表联合滚动部分" />

    <TextView
        android:id="@+id/wc"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#BDBDBD"
        android:gravity="center"
        android:orientation="vertical"
        android:text="滑动到一定位置吸顶的" />

    <com.zzt.views.DefaultDataRecycleView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#AEC9C3"
        android:gravity="center"
        android:text="一直吸顶的部分" />
</com.zzt.nested.layoutview.CalendarFrameLayout>
