<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CalendarViewActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/red" />

    <com.zzt.calendar.CalendarFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.necer.calendar.MonthCalendar
            android:id="@+id/mc"
            android:layout_width="match_parent"
            android:layout_height="300dp" />

        <com.necer.calendar.WeekCalendar
            android:id="@+id/wc"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:calendarBackground="@drawable/week_bg" />

        <com.zzt.views.DefaultDataRecycleView
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#013D2F" />
    </com.zzt.calendar.CalendarFrameLayout>

</LinearLayout>